{
  "name": "phase1-minimal-agent",
  "version": "1.0.0",
  "description": "Phase 1 - Minimal AI desktop agent",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"electron .\"",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "esbuild apps/main/index.ts apps/main/llm-providers.ts --bundle --platform=node --target=node18 --outdir=dist/main --external:electron --external:playwright",
    "build:preload": "esbuild apps/preload/index.ts --bundle --platform=node --target=node18 --outfile=dist/preload/index.js --external:electron",
    "build:renderer": "vite build",
    "build:watch": "concurrently \"npm run build:main -- --watch\" \"npm run build:preload -- --watch\" \"vite build --watch\"",
    "postinstall": "node scripts/postinstall.js"
  },
  "dependencies": {
    "electron": "^32.2.6",
    "playwright": "^1.56.0"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.1.0",
    "esbuild": "^0.24.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.11"
  }
}
