{
  "name": "phase1-minimal-agent",
  "version": "1.0.0",
  "description": "Phase 1 - Minimal AI desktop agent",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "npm run build && concurrently \"npm run build:watch\" \"wait-on dist/renderer/bubble.html dist/renderer/panel.html && electron .\"",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "esbuild apps/main/index.ts apps/main/llm-providers.ts apps/main/llm-providers-enhanced.ts apps/main/mcp/*.ts --bundle --platform=node --target=node18 --outdir=dist/main --external:electron --external:playwright",
    "build:preload": "esbuild apps/preload/index.ts --bundle --platform=node --target=node18 --outfile=dist/preload/index.js --external:electron",
    "build:renderer": "vite build",
    "build:tools": "esbuild apps/main/tools/*.ts --bundle --platform=node --target=node18 --outdir=dist/main/tools --external:electron --external:playwright",
    "build:plugins": "esbuild apps/main/plugins/*.ts --bundle --platform=node --target=node18 --outdir=dist/main/plugins --external:electron --external:playwright",
    "build:watch": "concurrently \"npm run build:main -- --watch\" \"npm run build:preload -- --watch\" \"vite build --watch\"",
    "postinstall": "node scripts/postinstall.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^17.2.3",
    "electron": "^38.2.1",
    "playwright": "^1.56.0"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.1.0",
    "esbuild": "^0.25.10",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "typescript": "^5.6.3",
    "vite": "^6.0.3",
    "wait-on": "^9.0.1"
  }
}
